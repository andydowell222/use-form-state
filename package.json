    "trailingComma": "es5"
  },
  "module": "dist/use-form-state.esm.js",
  "size-limit": [
    {
      "path": "dist/use-form-state.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-form-state.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^9.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": ">=16"
  },
